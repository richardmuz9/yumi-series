# API URL - Railway deployment (replace with your Railway domain)
VITE_API_URL=https://your-app-name.up.railway.app

# Alternative configurations:
# For local development with Railway backend
# VITE_API_URL=https://your-app-name.up.railway.app

# For local development with local backend
# VITE_API_URL=http://localhost:3000

# Frontend URL
VITE_FRONTEND_URL=https://yumi77965.online

# Development Configuration
VITE_NODE_ENV=development

# External Services (Optional - for development)
VITE_ENABLE_MOCK_DATA=true

# Chat API Configuration
VITE_CHAT_API_ENDPOINT=/api/chat

# Billing API Configuration
VITE_BILLING_API_ENDPOINT=/api/billing

# Authentication
VITE_AUTH_ENABLED=true

# i18n Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,zh,ja,ko

